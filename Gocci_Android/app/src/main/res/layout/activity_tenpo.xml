<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:background="@drawable/ic_cafe">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imageView"
            android:src="@drawable/ic_staba"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="280dp"
                android:layout_height="30dp"
                android:text="店舗名"
                android:id="@+id/TenpoView"
                android:textColor="#f5f5f5"
                android:textSize="12sp"
                android:layout_marginTop="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="280dp"
                android:layout_height="30dp"
                android:text="住所"
                android:id="@+id/TenpoView2"
                android:textColor="#f5f5f5"
                android:textSize="12sp"
                android:layout_marginTop="3dp"
                android:textStyle="bold" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="right">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="128チップ"
                    android:id="@+id/textView3"
                    android:textColor="#f5f5f5"
                    android:background="#757575"
                    android:layout_marginRight="5dp"
                    android:textStyle="bold"
                    android:padding="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="256コメント"
                    android:id="@+id/textView4"
                    android:textColor="#f5f5f5"
                    android:background="#757575"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold"
                    android:padding="5dp" />

                <Button
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="投稿"
                    android:id="@+id/toukoubutton"
                    android:background="#e51c23"
                    android:textColor="#eeeeee"
                    android:textSize="15sp"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/mylistView3" />
    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>